@model ColaboradorModel

<h2>Cadastro de Colaboradores</h2>

<br />

<form asp-controller="Colaborador" asp-action="Cadastro">
    <input type="hidden" asp-for="Id" value="@try { @ViewBag.Colaborador.Id } catch { } " />

    <div class="form-group">
        <label>Nome</label>
        <input asp-for="Nome" type="text" class="form-control" value="@try { @ViewBag.Colaborador.Nome } catch { } " />
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>CPF ou CNPJ</label>
        <input asp-for="CPF" type="text" class="form-control" value="@try { @ViewBag.Colaborador.CPF } catch { } " />
        <span asp-validation-for="CPF" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Email</label>
        <input asp-for="Email" type="text" class="form-control" value="@try { @ViewBag.Colaborador.Email } catch { } " />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Telefone</label>
        <input asp-for="Telefone" type="tel" class="form-control" value="@try { @ViewBag.Colaborador.Telefone } catch { } " />
        <span asp-validation-for="Telefone" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Empresas</label>
        <select asp-for="Empresa_Id" class="form-control">
            @{
                foreach (var item in (List<EmpresaModel>)ViewBag.ListaEmpresas)
                {
                    <option value="@item.Id">@item.Nome_Fantasia</option>
                }

            }
        </select>
    </div>
    <div class="form-group">
        <label>Tipo de Colaborador:</label>
        <select asp-for="Tipo" class="form-control">
            <option value="2">Vendedor</option>
            <option value="3">Orcamentista</option>
            <option value="4">Projetista</option>
            <option value="5">Comprador</option>
            <option value="6">Gerente de Produção</option>
            <option value="7">Montador</option>
        </select>
    </div>

    <button type="submit" class="btn btn-block btn-success">Registrar</button>
</form>